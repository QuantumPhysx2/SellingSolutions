@model SellingSolutions.Models.Product
@using Microsoft.AspNetCore.Identity
@using SellingSolutions.Areas.Identity.Data
@inject SignInManager<SellingSolutionsUser> SignInManager
@inject UserManager<SellingSolutionsUser> UserManager

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated && User.Identity.Name == Model.Seller)
{
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Product</h4>
        <hr />
        <dl class="dl-horizontal">
            <dd>
                <img alt="@Html.DisplayFor(model => model.Name)" src="@Html.DisplayFor(model => model.Image)" />
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Seller)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Seller)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
}
else
{
    <h1>You are not the owner!</h1>
    <a asp-action="Index">Go back</a>
}
